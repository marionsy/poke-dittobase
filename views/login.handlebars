<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card my-5 bg-primary">
        <form class="card-body cardbody-color p-lg-5 login-form">
          <div class="text-center">
            <img src={{getRandomPokemonImage}} class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
              width="250px" alt="profile">
          </div>
          <div class="mb-3">
            <input type="text" class="form-control" id="logemail" aria-describedby="emailHelp" placeholder="email">
          </div>
          <div class="mb-3">
            <input type="password" class="form-control" id="logpass" placeholder="password">
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-color px-5 mb-5 w-100 loginbtn bg-warning">Login</button>
          </div>
          <div id="emailHelp" class="form-text text-center mb-5 text-warning">Not Registered? <a href="/signup"
              class="text-warning fw-bold"> Create an Account</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>