          <li class="nav-item">
            <a class="nav-link" href="/friends"><i class="fa-solid fa-user-group"></i>Friends</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><i class="fa-solid fa-door-open"></i>Logout</a>
          </li>
        </ul>
      </div>
    </nav>

    {{/if}}
  </nav>

  <main>
    {{{ body }}}
