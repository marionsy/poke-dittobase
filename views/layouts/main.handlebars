  <div class="jumbotron jumbotron-fluid text-center">
    <div class="container">
      <h1 class="display-4">Poke DittoBase</h1>
    </div>
  </div>


  <nav>
    {{#if logged_in}}

    <nav class="navbar navbar-expand-lg navbar-light">
