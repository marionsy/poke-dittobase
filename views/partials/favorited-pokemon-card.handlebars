<div class="col-4 mt-5 mb-4 align-self-start">
  <div class="card" style="border-radius: 5%;">
    <img src={{image}} class="card-img-top" alt={{name}}>
    <div class="card-body">
      <h5 class="card-title" style="font-family: 'Indie Flower'; font-size: 25px">{{name}}</h5>
      <p class="card-text">{{description}}</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Ability: {{ability}}</li>
      <li class="list-group-item">Original Game: {{game}}</li>
    </ul>
    <div class="card-body">
      <a href="#" class="card-link delete-from-favorites text-danger" pokemon-name={{name}}>Delete from favorites</a>
    </div>
  </div>
</div>