{{#if logged_in}}
<section class="favorite-Pokemon">
  <img src="{{pokemon.photo}}" alt="{{pokemon.name}}">
  <div class="myPokemon">
    <h1>{{myFavoritePokemon.title}}</h1>
    <div class="row">
  <div class="column">
    <div class="pokemon-card1">..</div>
      <ul>
        <li>{{description.pokemon}}</li>
        <li>{{abilities.pokemon}}</li>
        <li>{{evolution.pokemon}}</li>
      </ul>
  </div>
  <div class="column">
    <div class="pokemon-card2">..</div>
  </div>
  <div class="column">
    <div class="pokemon-card3">..</div>
  </div>
  <div class="column">
    <div class="pokemon-card4">..</div>
  </div>
</div>
    
  </div>
</section>
<!-- Otherwise, provide a link to login -->
{{else}}
<p>You must login first to see your saved pokemon!</p>
{{/if}}