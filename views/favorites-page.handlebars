<section class="favorite-Pokemon">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4 text-center">{{username}}'s Favorite Pokemon</h1>
    </div>
  </div>

  {{#if favoritePokemon.length}}
  <div class="container text-center">
    <div class="row">
      {{#each favoritePokemon as |pokemon| }}
      {{> favorited-pokemon-card}}
      {{/each}}
    </div>
  </div>
  {{else}}
  {{!-- TODO add error message if no favorited pokemon --}}
  {{/if}}

</section>

<script src="/js/delete-favorite.js"></script>